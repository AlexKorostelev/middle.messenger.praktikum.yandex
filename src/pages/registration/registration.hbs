<html>
    <head>
        <link rel="stylesheet" type="text/css" href="./registration.less">
    </head>
    <body>
        <div class="pagecontainer">
            <div class="registration-form">
                <h2>Регистрация</h2>

                <form>
                  <div class="registration-form__input-block">
                    <label for="email">Почта:</label>
                    <input type="email" name="email" class="registration-form__input-block_input">
                    <label for="login">Логин:</label>
                    <input type="text" name="login" class="registration-form__input-block_input">
                    <label for="first_name">Имя:</label>
                    <input type="text" name="first_name" class="registration-form__input-block_input">
                    <label for="second_name">Фамилия:</label>
                    <input type="text" name="second_name" class="registration-form__input-block_input">
                    <label for="phone">Телефон:</label>
                    <input type="tel" name="phone" class="registration-form__input-block_input">
                    <label for="password">Пароль:</label>
                    <input type="password" name="password" class="registration-form__input-block_input">
                  </div>

                  <div class="registration-form__button-block">
                    <input type="button" value="Зарегистрироваться" class="registration-form__button-block__button">
                    <input type="button" value="Авторизоваться" class="registration-form__button-block__button">
                  </div>

                </form>
            </div>
        </div>
    </body>
</html>