<html lang="ru">

  <head>
    <link rel="stylesheet" type="text/css" href="./registration.less" />
    <script defer src="index.ts" type="module"></script>
    <title>Регистрация</title>
  </head>

  <body>
    <div class="page-container">
      <div class="registration-form">
        <h2 class="registration-form__title">Регистрация</h2>

        <form class="registration-form__form">
          <div class="input-block">
            <label class="input-label" for="email">Почта:</label>
            <input type="email" id="email" name="email" class="form-input input-normal" />
            <label class="input-label" for="login">Логин:</label>
            <input type="text" id="login" name="login" class="form-input input-normal" />
            <label class="input-label" for="first_name">Имя:</label>
            <input type="text" id="first_name" name="first_name" class="form-input input-normal" />
            <label class="input-label" for="second_name">Фамилия:</label>
            <input type="text" id="second_name" name="second_name" class="form-input input-normal" />
            <label class="input-label" for="phone">Телефон:</label>
            <input type="tel" id="phone" name="phone" class="form-input input-normal" />
            <label class="input-label" for="password">Пароль:</label>
            <input type="password" id="password" name="password" class="form-input input-normal" autocomplete="false" />
          </div>

          <div class="button-block">
            <button id="reg-button" type="submit" class="button-block__button">Зарегистрироваться</button>
          </div>

        </form>
      </div>
    </div>
  </body>

</html>
