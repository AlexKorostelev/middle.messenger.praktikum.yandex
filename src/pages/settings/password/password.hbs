<html>
    <head>
        <link rel="stylesheet" type="text/css" href="./password.less">
    </head>
    <body>
        <div class="pagecontainer">
            <div class="password-form">
                <h2>Сменить пароль</h2>

                <form>
                  <div class="password-form__input-block">
                    <label for="oldPassword">Текущий пароль:</label>
                    <input type="password" name="oldPassword" class="password-form__input-block_input">
                    <label for="newPassword">Новый пароль:</label>
                    <input type="password" name="newPassword" class="password-form__input-block_input">
                  </div>

                  <div class="password-form__button-block">
                    <input type="button" value="Сохранить" class="password-form__button-block__button">
                    <input type="button" value="Отмена" class="password-form__button-block__button">
                  </div>
                </form>
            </div>
        </div>
    </body>
</html>