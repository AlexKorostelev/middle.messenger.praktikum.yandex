<html lang="ru">

  <head>
    <link rel="stylesheet" type="text/css" href="./profile.less" />
    <script defer src="index.ts" type="module"></script>
    <title>Настройки</title>
  </head>

  <body>
    <div class="page-container">
      <div class="profile-settings">
        <div class="profile-form">
          <h2 class="profile-form__title">Настройки</h2>

          <form class="profile-form__form">
            <div class="input-block">
              <label class="input-label" for="email">Почта:</label>
              <input type="email" id="email" value="{{settings.profile.email}}" name="email" class="form-input input-normal" />
              <label class="input-label" for="login">Логин:</label>
              <input type="text" id="login" value="{{settings.profile.login}}" name="login" class="form-input input-normal" />
              <label class="input-label" for="first_name">Имя:</label>
              <input type="text" id="first_name" value="{{settings.profile.first_name}}" name="first_name" class="form-input input-normal" />
              <label class="input-label" for="second_name">Фамилия:</label>
              <input type="text" id="second_name" value="{{settings.profile.second_name}}" name="second_name" class="form-input input-normal" />
              <label class="input-label" for="display_name">Никнэйм:</label>
              <input type="text" id="display_name" value="{{settings.profile.display_name}}" name="display_name" class="form-input input-normal" />
              <label class="input-label" for="phone">Телефон:</label>
              <input type="tel" id="phone" value="{{settings.profile.phone}}" name="phone" class="form-input input-normal" />
              <nav class="nav-block">
                <a class="nav-block__link" href="../password/password.hbs">Сменить пароль</a>
              </nav>
            </div>

            <div class="button-block">
              <button id="save-button" type="submit" class="button-block__button">Сохранить</button>
              <button id="cancel-button" type="reset" class="button-block__button">Отмена</button>
            </div>

          </form>
        </div>
        <div class="avatar">
          <input type="image" name="avatar" src="https://previews.123rf.com/images/denizjdazel/denizjdazel1902/denizjdazel190200045/124841367-.jpg?fj=1" alt="avatar" />
        </div>
      </div>
    </div>
  </body>

</html>
